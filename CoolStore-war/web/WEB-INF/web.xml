<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>TopicsServlet</servlet-name>
        <servlet-class>com.flycode.coolstore.TopicsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrowseServlet</servlet-name>
        <servlet-class>com.flycode.coolstore.BrowseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.flycode.coolstore.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.flycode.coolstore.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.flycode.coolstore.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeReservationServlet</servlet-name>
        <servlet-class>com.flycode.coolstore.MakeReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservationsServlet</servlet-name>
        <servlet-class>com.flycode.coolstore.ReservationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TopicsServlet</servlet-name>
        <url-pattern>/api/topics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BrowseServlet</servlet-name>
        <url-pattern>/api/browse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/api/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/api/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeReservationServlet</servlet-name>
        <url-pattern>/api/reserve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservationsServlet</servlet-name>
        <url-pattern>/api/reservations</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
